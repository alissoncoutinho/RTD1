@model Barragem.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    
}
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <input type="hidden" name="barragemId" value="@ViewBag.barragemId">
    <div class="form-horizontal">
    <legend>Cadastro</legend>

    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label col-md-2" })*
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.UserName,new { @class = "form-control", placeholder = "ex.: nome.sobrenome ou email" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-md-2" })
        <div class="col-md-5">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.nome, new { @class = "control-label col-md-2" })*
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.nome, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.nome, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.dataNascimento, new { @class = "control-label col-md-2" })*
        <div class="col-md-2">
            <input id="dataNascimento" name="dataNascimento" value="" type="text" class="form-control" placeholder="dd/mm/yyyy" />
            @Html.ValidationMessageFor(model => model.dataNascimento, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.naturalidade, new { @class = "control-label col-md-2" })*
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.naturalidade, new { @class = "form-control", placeholder = "ex.: Rio de Janeiro - RJ" })
            @Html.ValidationMessageFor(m => m.naturalidade, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.altura2, new { @class = "control-label col-md-2" })*
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.altura2, new { @class = "form-control", placeholder = "ex.: 1,80" })
            @Html.ValidationMessageFor(m => m.altura2, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.lateralidade, new { @class = "control-label col-md-2" })
        <div class="col-md-4">
            <select id="lateralidade" name="lateralidade" class="form-control">
                <option value="destro">destro</option>
                <option value="canhoto">canhoto</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.email, new { @class = "control-label col-md-2" })*
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.email, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.telefoneFixo, new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.telefoneFixo, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.telefoneCelular, new { @class = "control-label col-md-2" })*
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.telefoneCelular, new { @class = "form-control",placeholder="ex.:(61)99999-9999/vivo" })
            @Html.ValidationMessageFor(m => m.telefoneCelular, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.telefoneCelular2, new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.telefoneCelular2, new { @class = "form-control", placeholder = "ex.:(61)99999-9999/tim" })
            @Html.ValidationMessageFor(m => m.telefoneCelular2)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.bairro, new { @class = "control-label col-md-2" })*
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.bairro, new { @class = "form-control", placeholder = "ex.: águas claras"})
            @Html.ValidationMessageFor(m => m.bairro, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.classeId, new { @class = "control-label col-md-2" })*
        <div class="col-md-4">
            @if (ViewBag.isClasseUnica)
            {
                @Html.DropDownList("classeId", null, new { @class = "form-control" })
            }
            else
            {
                @Html.DropDownList("classeId", null, "Escolha a sua classe", new { @class = "form-control" })
            }
            @Html.ValidationMessageFor(m => m.classeId, "", new { @class = "alert-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.matriculaClube, new { @class = "control-label col-md-2" })
        <div class="col-md-2">
            @Html.TextBoxFor(m => m.matriculaClube, new { @class = "form-control" })
        </div>
    </div>
    @if (Roles.IsUserInRole("admin")){
        <div class="form-group">
            <div class="col-md-4">
                <label>
                    @Html.CheckBoxFor(m => m.organizador) Organizador
                </label>
            </div>
        </div>
    }

    <div class="form-group">
        <input type="submit" value="Cadastrar" />
    </div>
</div>
}
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
                <script type="text/javascript">
                    $(document).ready(function () {
                        $("#dataNascimento").mask("99/99/9999");
                        $("#altura2").mask("9,99");
                        $("#telefoneFixo").mask("(99) 9999-9999");
                        $("#telefoneCelular").mask("(99) 99999-9999/AAAAAA");
                        $("#telefoneCelular2").mask("(99) 99999-9999/AAAAAA");
                                                
                    })
                </script>
            }
