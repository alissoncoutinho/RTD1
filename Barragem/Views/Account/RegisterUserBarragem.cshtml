@model Barragem.Models.RegisterModel
@{
    ViewBag.Title = "Finalize seu cadastro";

}
@using (Html.BeginForm("RegisterUserBarragem", "Account", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.barragemId)

    <div class="form-horizontal">
        <legend>Finalize seu cadastro</legend>
        <div class="form-group">
            @Html.LabelFor(m => m.naturalidade, new { @class = "control-label col-md-2" })*
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.naturalidade, new { @class = "form-control", placeholder = "ex.: Rio de Janeiro - RJ" })
                @Html.ValidationMessageFor(m => m.naturalidade, "", new { @class = "alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.bairro, new { @class = "control-label col-md-2" })*
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.bairro, new { @class = "form-control", placeholder = "ex.: águas claras" })
                @Html.ValidationMessageFor(m => m.bairro, "", new { @class = "alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.classeId, new { @class = "control-label col-md-2" })*
            <div class="col-md-4">
                @Html.DropDownList("classeId", null, "Escolha a sua classe", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.classeId, "", new { @class = "alert-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.matriculaClube, new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.TextBoxFor(m => m.matriculaClube, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Cadastrar" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
