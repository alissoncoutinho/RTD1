@{
    ViewBag.Title = "Index";
}
@model IEnumerable<Barragem.Models.Temporada>
                      <legend>Temporada</legend>

    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-small"><span class="glyphicon glyphicon-plus"></span> Novo</a>
    </p>
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped table-condensed table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.barragem)
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.barragem.nome)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new {id = @item.Id })" title="Editar/Detalhar" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                    <a href="@Url.Action("../Rodada/Index", new { temporadaId = item.Id })" title="Rodadas" class="btn btn-default btn-xs">
                        <span class="glyphicon glyphicon-list"></span>
                    </a>
                </td>
            </tr>
}
                    </table>
                </div>