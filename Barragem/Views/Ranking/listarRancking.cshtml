@model IEnumerable<Barragem.Models.Rodada>
@{
    ViewBag.Title = "Lista Rancking";
}

<h2>Rankings anteriores</h2>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dataFim)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.codigoSeq)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dataFim)
        </td>
        <td>
            <a href="@Url.Action("Index", new { id = item.Id })" title="Ranking" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-list"></span></a>
        </td>
    </tr>
}

</table>
