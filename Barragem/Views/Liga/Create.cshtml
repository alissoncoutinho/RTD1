@model Barragem.Models.Liga

<div class="box box-danger">
    <div class="box-header with-border">
        <h3 class="box-title">Liga</h3>
    </div>

    @using (Html.BeginForm("Create", "Liga", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="box-body">
            
            <div class="box-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="nome">Escolha o nome da sua liga:</label>
                    <div class="col-sm-8 input-group">
                        <input class="form-control" id="nome" name="nome" type="text" value="">
                    </div>
                    <span class="field-validation-valid" data-valmsg-for="nome" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="box-footer">
                @Html.ActionLink("Voltar", "Index", new { @class = "btn btn-default" })
                <button type="submit" class="btn btn-info pull-right">Gravar</button>
            </div>
        </div>
    }