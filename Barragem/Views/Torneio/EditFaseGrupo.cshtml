@model IEnumerable<Barragem.Models.InscricaoTorneio>
    @Html.Partial("_PartialTabs")

    <div class="tab-content">
        <div class="tab-pane fade" id="tabCadastro"></div>
        <div class="tab-pane fade" id="tabClasses"></div>
        <div class="tab-pane fade" id="tabInscritos"></div>
        <div class="tab-pane fade" id="tabEditClasses"></div>
        <div class="tab-pane fade" id="tabJogos"></div>
        <div class="tab-pane fade"  id="tabDuplas"></div>
            <div class="tab-pane fade in active" id="tabFaseGrupo">
                <br>
                @using (Html.BeginForm("MontarTabelaFaseGrupo", "Torneio", FormMethod.Post, new { @class = "form-row", @name = "formClasses" }))
                {
                    <input type="hidden" value="@ViewBag.TorneioId" name="torneioId" id="torneioId">
                    <a href="@Url.Action("Tabela", new { torneioId = ViewBag.torneioId })" target="_blank" class="btn btn-success btn-small">Ver Tabela</a>
                }
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Classes</label>
                        <div class="col-sm-4 input-group">
                            <select name="filtroClasse" id="filtroClasse" class="form-control" onchange="Selecionar()">
                                @foreach (var item2 in ViewBag.Classes)
                                {
                                    <option value="@item2.Id" @if (ViewBag.filtroClasse == item2.Id) { @Html.Raw("selected")        }>@item2.nome</option>
                                }
                            </select>
                            <input type="hidden" value="@ViewBag.TorneioId" name="torneioId" id="torneioId">
                        </div>
                    </div>
                </div>
               
                @if (Model == null)
                {
                    <p>Esse torneio não possui classes com fase de grupo.</p>
                }
                else
                {
                    if (ViewBag.Classificados != null)
                    {
                        <div class="col-sm-6 col-xs-10 box-body table-responsive no-padding">
                            <table class="table table table-hover">
                                <thead>
                                    <tr class="active">
                                        <th class="col-sm-1 col-xs-1">#</th>
                                        <th>Classificação</th>
                                        <th title="número de vitórias">V</th>
                                        <th title="Saldo de Sets/Saldo de Games">S.S/S.G.</th>
                                        <th title="Média de Sets/Saldo de Games">A.S/A.G.</th>
                                        <th title="Segundo colocado do grupo">2o do Grupo</th>
                                    </tr>
                                </thead>
                                @{
                                    var posicao = 0;
                                    foreach (var item in ViewBag.Classificados)
                                    {
                                        posicao++;
                                        <tr>
                                            <td> @posicao º</td>
                                            <td>
                                                @item.nomeUser
                                                @if (item.userIdParceiro != null)
                                                {
                                                    @Html.Raw("/ " + item.nomeParceiro)
                                                }
                                            </td>
                                            <td>@item.pontuacao</td>
                                            <td>@Html.Raw(item.saldoSets + "/" + item.saldoGames)</td>
                                            <td>@Html.Raw(item.averageSets + "/" + item.averageGames)</td>
                                            <td>
                                                @item.nome2oColocado
                                                @if (item.userIdParceiro2oColocado != null)
                                                {
                                                    @Html.Raw("/ " + item.nomeParceiro2oColocado)
                                                }
                                            </td>

                                    </tr>
                                    }
                                }
                            </table>
                        </div>
                                    }
                    <table class="table table-striped table-condensed table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayName("Inscritos")
                            </th>
                            <th>
                                @Html.DisplayName("Grupos")
                            </th>
                            <th></th>
                        </tr>
                        @{int i = 1; }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="hidden" value="@item.userId" name="@Html.Raw("jogador_" + item.userId)" id="@Html.Raw("jogador_" + item.userId)">
                                    @Html.Raw(i++ + ") " + item.participante.nome)
                                    @if (item.parceiroDuplaId != null && item.parceiroDuplaId != 0)
                                    {
                                        @Html.Raw(" / " + item.parceiroDupla.nome)
                                    }
                                </td>
                                <td>
                                    <select data-valor="@item.Id" name="@Html.Raw("grupo_" + item.Id)" id="@Html.Raw("grupo_" + item.Id)" class="form-control grupo">
                                        <option @if (item.grupo==0) { @Html.Raw("selected") } value="0">Sem Grupo</option>
                                        <option @if (item.grupo==1) { @Html.Raw("selected") } value="1">1</option>
                                        <option @if (item.grupo==2) { @Html.Raw("selected") } value="2">2</option>
                                        <option @if (item.grupo==3) { @Html.Raw("selected") } value="3">3</option>
                                        <option @if (item.grupo==4) { @Html.Raw("selected") } value="4">4</option>
                                        <option @if (item.grupo==5) { @Html.Raw("selected") } value="5">5</option>
                                        <option @if (item.grupo==6) { @Html.Raw("selected") } value="6">6</option>
                                        <option @if (item.grupo==7) { @Html.Raw("selected") } value="7">7</option>
                                        <option @if (item.grupo==8) { @Html.Raw("selected") } value="8">8</option>
                                        <option @if (item.grupo==9) { @Html.Raw("selected") } value="9">9</option>
                                        <option @if (item.grupo==10) { @Html.Raw("selected") } value="10">10</option>
                                        <option @if (item.grupo==11) { @Html.Raw("selected") } value="11">11</option>
                                        <option @if (item.grupo==12) { @Html.Raw("selected") } value="12">12</option>
                                     </select>
                                </td>
                                <td align="center">
                                    <input type="hidden" name="@Html.Raw("inscricaoJogador_" + item.Id)" id="@Html.Raw("inscricaoJogador_" + item.Id)" value="@item.Id">
                                </td>
                            </tr>
                        }
                    </table>
                }
            </div>
    </div>
    @section Scripts {
        
        <script type="text/javascript">
            $(document).ready(function () {
                $(".grupo").change(function (event) {
                    var i = $(this).data("valor");
                    var inscricaoJogador = document.getElementById("inscricaoJogador_" + i).value;
                    var grupo = document.getElementById("grupo_" + i).value;
                    event.preventDefault();
                    $.ajax({
                        type: "POST",
                        url: "/Torneio/IncluirJogadorGrupo",
                        dataType: "json",
                        data: "{'inscricaoJogador':'" + inscricaoJogador + "', 'grupo':'" + grupo + "'}",
                        contentType: "application/json; charset=utf-8",
                        success: function (response) {
                            if (typeof response == "object") {
                                if (response.retorno === 0) {
                                    toastr.error(response.erro, "Erro");
                                } else {
                                    toastr.success("Atualização realizada com sucesso.", "");
                                }
                            }
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            location.reload(true);
                        }
                    });
                });
                                                
                $(".confirm").confirm({
                    title: "Confirmação",
                    content: "Tem certeza que deseja gerar as tabelas de grupo? Caso já existam jogos eles serão excluídos!",
                    buttons: {
                        sim: {
                            text: 'Sim',
                            btnClass: 'btn-primary',
                            action: function () {
                                document.forms[1].submit();
                            }
                        },
                        cancelar: {}
                    }
                });

            });
            
            function Selecionar() {
                var torneioId = document.getElementById('torneioId').value;
                var classeId = document.getElementById('filtroClasse').value;
                window.location = "EditFaseGrupo?torneioId=" + torneioId + "&filtroClasse=" + classeId;
            }

        </script>
    }
