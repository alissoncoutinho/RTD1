@model IEnumerable<Barragem.Models.InscricaoTorneio>
    @Html.Partial("_PartialTabs")

    <div class="tab-content">
        <div class="tab-pane fade in active" id="tabFaseGrupo">
            <div class="box box-primary">
                <div class="box-header">
                    <h4 class="box-title">Ações</h4>
                </div>
                <p>
                    @using (Html.BeginForm("MontarTabelaFaseGrupo", "Torneio", FormMethod.Post, new { @class = "form-row", @name = "formClasses" }))
                    {
                        <input type="hidden" value="@ViewBag.TorneioId" name="torneioId" id="torneioId">
                        <a href="@Url.Action("Tabela", new { torneioId = ViewBag.TorneioId })" target="_blank" class="btn btn-success btn-small">Ver Tabela</a>
                    }
                </p>
                <div class="box box-primary">
                    <div class="box-header">
                        <h4 class="box-title">Filtro</h4>
                    </div>

                    <div class="form-group">
                        <label class="col-md-1 control-label">Categoria</label>
                        <div class="col-md-3 input-group">
                            <select name="filtroClasse" id="filtroClasse" class="form-control" onchange="Selecionar()">
                                @foreach (var item2 in ViewBag.Classes)
                                {
                                    <option value="@item2.Id" @if (ViewBag.filtroClasse == item2.Id) { @Html.Raw("selected") }>@item2.nome</option>
                                }
                            </select>
                            <input type="hidden" value="@ViewBag.TorneioId" name="torneioId" id="torneioId">
                        </div>
                    </div>

                    @if (Model == null)
                    {
                        <p>Esse torneio não possui categorias com fase de grupo.</p>
                    }
                    else
                    {
                        if (ViewBag.Classificados != null)
                        {
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h4 class="box-title">Classificação fase de Grupos</h4>
                                </div>
                                <div class="row" style="margin-left: 0px;">
                                    <strong>1º colocados dos grupos</strong>
                                </div>
                                <div class="row" style="margin-left: 0px;">
                                    <div class="col-sm-6 col-xs-10 box-body table-responsive no-padding">
                                        <table class="table table table-hover">
                                            <thead>
                                                <tr class="active">
                                                    <th class="col-sm-1 col-xs-1">#</th>
                                                    <th>Classificação</th>
                                                    <th title="número de vitórias">V</th>
                                                    <th title="Saldo de Sets/Saldo de Games">S.S/S.G.</th>
                                                    <th title="Média de Sets/Saldo de Games">A.S/A.G.</th>
                                                </tr>
                                            </thead>
                                            @{
                                                var posicao = 0;
                                                foreach (var item in ViewBag.Classificados)
                                                {
                                                    posicao++;
                                                    <tr>
                                                        <td> @posicao º</td>
                                                        <td>
                                                            @item.nomeUser
                                                            @if (item.userIdParceiro != null)
                                                            {
                                                                @Html.Raw("/ " + item.nomeParceiro)
                                                            }
                                                        </td>
                                                        <td>@item.pontuacao</td>
                                                        <td>@Html.Raw(item.saldoSets + "/" + item.saldoGames)</td>
                                                        <td>@Html.Raw(item.averageSets + "/" + item.averageGames)</td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>
                                </div>

                                <div class="row" style="background-color: #f5f5f5; margin: 10px 0 10px 0; padding: 5px; display: inline-block; ">
                                    <span style="white-space: nowrap;"><strong>V:</strong> Vitória</span> |
                                    <span style="white-space: nowrap;"><strong>S.S:</strong> Saldo de Sets</span> |
                                    <span style="white-space: nowrap;"><strong>SG:</strong> Saldo de Games</span> |
                                    <span style="white-space: nowrap;"><strong>A.S:</strong> Média de Sets</span> |
                                    <span style="white-space: nowrap;"><strong>AG:</strong> Média de Games</span>
                                </div>

                                <div class="row" style="margin: 0 0 10px 0; padding: 5px;">
                                    <button type="button" class="btn btn-success btn-small" data-toggle="modal" data-target="#modalEntendaDesempate">
                                        Entenda o critério de desempate
                                    </button>
                                </div>

                                <div class="row" style="margin-left: 0px;">
                                    <strong>2º colocados dos grupos</strong>
                                </div>
                                <div class="row" style="margin-left: 0px;">
                                    <div class="col-sm-6 col-xs-10 box-body table-responsive no-padding">
                                        <table class="table table table-hover">
                                            <thead>
                                                <tr class="active">
                                                    <th title="Segundo colocado do grupo">2º do grupo</th>
                                                </tr>
                                            </thead>
                                            @{
                                                foreach (var item in ViewBag.Classificados)
                                                {
                                                    <tr>
                                                        <td>
                                                            @item.nome2oColocado
                                                            @if (item.userIdParceiro2oColocado != null)
                                                            {
                                                                @Html.Raw("/ " + item.nomeParceiro2oColocado)
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        }

                        if (Model.Count() > 0)
                        {
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h4 class="box-title">Formação dos Grupos</h4>
                                </div>
                                <table class="table table-striped table-condensed table-bordered">
                                    <tr>
                                        <th>Inscritos</th>
                                        <th>Grupos</th>
                                    </tr>
                                    @{
                                        int i = 1;
                                        int grupo = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        if ((grupo != item.grupo) && (grupo != 0))
                                        {
                                            <tr><td colspan="2">&nbsp;</td></tr>
                                        }
                                        <tr>
                                            <td>
                                                <input type="hidden" value="@item.userId" name="@Html.Raw("jogador_" + item.userId)" id="@Html.Raw("jogador_" + item.userId)">
                                                @Html.Raw(i++ + ") " + item.participante.nome)
                                                @if (item.parceiroDuplaId != null && item.parceiroDuplaId != 0)
                                                {
                                                    @Html.Raw(" / " + item.parceiroDupla.nome)
                                                }
                                                @if (item.cabecaChave < 100)
                                                {@Html.Raw(" (" + @item.cabecaChave + ")")}
                                            </td>
                                            <td>
                                                @if (item.grupo == 0)
                                                {@Html.Raw("sem grupo") }
                                            else
                                            {
                                                @item.grupo
                                            }
                                            </td>
                                        </tr>
                                        { grupo = item.grupo ?? 0; }
                                    }
                                </table>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalEntendaDesempate" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
                    <h4 class="modal-title" id="myModalLabel">Critério Desempate</h4>
                </div>
                <div class="modal-body">
                    <p style="font-size: 36px; font-family: 'open sans'; text-align: center;" data-mce-style="font-size: 36px; font-family: 'open sans'; text-align: center;"><span style="color: #008000;" data-mce-style="color: #008000;"><strong>Critério de Desempate</strong></span></p>
                    <p style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">Os atletas classificados da fase de grupos para a fase eliminatória, serão ordenados como cabeças de chaves seguindo os critérios abaixo:</span></p>
                    <p style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">a) Caso todos os grupos tiverem o mesmo número de dupla:</span></p>
                    <ul style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 11px; font-weight: 400; text-align: start;" data-mce-style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 11px; font-weight: 400; text-align: start;"><li style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">1º Maior número de vitórias;</span></li><li style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">2º Melhor saldo de sets;</span></li><li style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">3º Melhor saldo de games</span></li></ul>
                    <p style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">b) Caso os grupos tenham números diferentes de duplas:</span></p>
                    <ul style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 11px; font-weight: 400; text-align: start;" data-mce-style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 11px; font-weight: 400; text-align: start;"><li style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">1º sets average*;</span></li><li style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">2º games average*;</span></li></ul>
                    <p style="font-size: 16px; font-family: open sans;" data-mce-style="font-size: 16px; font-family: open sans;"><span style="font-size: 14pt;" data-mce-style="font-size: 14pt;">**Soma dos games ganhos divididos pelos games jogados. Ex: Em um grupo uma dupla jogou duas vezes e ganhou as duas de 6x4, portanto a dupla jogou 20 games e ganhou 12 deles. O game averege da dupla será 12 dividido por 20, ou seja, 0,6. Esse valor é multiplicado por mil para evitar problemas de arredondamento. No exemplo acima, o game average seria 600.</span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {

        <script type="text/javascript">
            function Selecionar() {
                var torneioId = document.getElementById('torneioId').value;
                var classeId = document.getElementById('filtroClasse').value;
                window.location = "EditFaseGrupo?torneioId=" + torneioId + "&filtroClasse=" + classeId;
            }

        </script>
    }
