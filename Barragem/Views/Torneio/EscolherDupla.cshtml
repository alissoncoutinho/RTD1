@model IEnumerable<Barragem.Models.InscricaoTorneio>
    @{
        Layout = "~/Views/Shared/_LayoutTorneio2.cshtml";
    }
    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Monte sua dupla na categoria @ViewBag.classeNome</h3>
                    </div>
                    <div class="box-body">
                        @if (Model == null){
                            <p>Desculpe, mas não encontramos nenhuma inscrição ativa de classe de dupla no seu login.</p>
                        }else{
                            if (!ViewBag.isDisponivel){
                                <small>Você já possui parceiro de dupla, caso queira mudar de parceiro, favor entrar em contato com o organizador do torneio.</small>
                            }
                            <table class="table table-striped table-condensed table-bordered">
                                <tr>
                                    <th>
                                        @Html.DisplayName("Nome")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Selecionar Parceiro")
                                    </th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr @if (item.participante.UserId == WebSecurity.GetUserId(User.Identity.Name) || (item.parceiroDupla != null && item.parceiroDupla.UserId == WebSecurity.GetUserId(User.Identity.Name))) { @Html.Raw("style='color:green; font-weight: bold;'")   }>
                                        <td>
                                            @Html.Raw(item.participante.nome)
                                        </td>
                                        <td id="@Html.Raw("escolhaTd"+item.Id)">
                                            @if (item.parceiroDupla != null)
                                            {
                                                @item.parceiroDupla.nome
                                            }
                                            else if (!ViewBag.isDisponivel)
                                            {
                                                @Html.Raw("")
                                            }
                                            else
                                            {
                                                <button title="Escolher dupla" data-maisduplas="@ViewBag.temMaisClassesDuplas" data-torneio="@item.torneioId" data-valor="@item.Id" data-nome="@item.participante.nome" data-classe="@item.classe" data-fone="@item.participante.telefoneCelular"
                                                        name="@Html.Raw("button"+item.Id)" id="@Html.Raw("button" + item.Id)" class="col-lg-12 col-xs-12 btn btn-primary btn-xs confirmEscolha">
                                                    Escolher
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </table>
                            <br>
                            <button title="Não encontrei meu parceiro" data-maisduplas="@ViewBag.temMaisClassesDuplas" data-torneio="@ViewBag.torneioId" class="col-lg-12 col-xs-12 btn btn-danger btn-sm naoEncontreiParceio">
                                Meu parceiro ainda não está na lista
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                $(".confirmEscolha").click(function (event) {
                    event.preventDefault();
                    var id = $(this).data("valor");
                    var participante = $(this).data("nome");
                    var fone = $(this).data("fone");
                    var torneio = $(this).data("torneio");
                    var classe = $(this).data("classe");
                    var textoButton = "Ok. Finalizar inscrição."
                    var temMaisClassesDuplas = $(this).data("maisduplas") == "True";
                    var url = "/Torneio/ConfirmacaoInscricao?torneioId=" + torneio + "&msg=Inscrição realizada com sucesso";
                    if (temMaisClassesDuplas) {
                        textoButton = "Ok. Ir para a escolha da próxima categoria."
                        url = "/Torneio/EscolherDupla?torneioId=" + torneio + "&classe=0&segundaClasseDupla=true";
                    }
                    $.confirm({
                        text: "Você está escolhendo <b>" + participante + "</b>, telefone <b>" + fone + "</b> como sua dupla. <b>Deseja prosseguir?</b>",
                        confirm: function (button) {
                            $.ajax({
                                type: "POST",
                                url: "/Torneio/EscolherDupla",
                                dataType: "json",
                                data: "{'inscricaoJogador':'" + id + "', 'torneioId':'" + torneio + "', 'classe':'" + classe + "'}",
                                contentType: "application/json; charset=utf-8",
                                success: function (response) {
                                    if (typeof response == "object") {
                                        if (response.retorno === 0) {
                                            toastr.error(response.erro, "Erro");
                                        } else {
                                            //$('#escolhaTd' + id).html('<small style="color:green;"><b>Parceiro Escolhido</b></small>');
                                            window.location.href = url;
                                        }
                                    }
                                },
                                error: function (jqXHR, textStatus, errorThrown) {
                                    location.reload(true);
                                }
                            });
                        },
                        cancel: function (button) {

                        },
                        confirmButton: textoButton,
                        cancelButton: "Não"
                    });

                });

                $(".naoEncontreiParceio").click(function (event) {
                    event.preventDefault();
                    var torneio = $(this).data("torneio");
                    var temMaisClassesDuplas = $(this).data("maisduplas") == "True";
                    var textoButton = "Ok. Finalizar inscrição."
                    var url = "/Torneio/ConfirmacaoInscricao?torneioId=" + torneio + "&msg=Inscrição realizada com sucesso";
                    if (temMaisClassesDuplas) {
                        textoButton = "Ok. Ir para escolha do parceiro da outra categoria."
                        url = "/Torneio/EscolherDupla?torneioId=" + torneio + "&classe=0&segundaClasseDupla=true";
                    }
                    $.confirm({
                        text: "Isso acontece porque o seu parceiro ainda não se inscreveu. Não se preocupe, ele poderá te escolher como parceiro no momento da inscrição dele.",
                        confirm: function (button) {
                            window.location.href = url;
                        },
                        confirmButton: textoButton,
                        cancelButton: "Voltar"
                    });

                });


            });

        </script>
    }
