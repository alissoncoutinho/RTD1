@{
    ViewBag.Title = "Index";
    int i = 0;
}
@model IEnumerable<Barragem.Models.InscricaoTorneio>
    <legend>Inscrições</legend>
    <div class="box-body table-responsive no-padding no-border">
        <div class="pull-right" style="padding-bottom: 6px">
            <a href="@Url.Action("Index")" title="Voltar" class="btn btn-default">Voltar</a>
        </div>
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    <b>#</b>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.participante.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.classe)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.participante.telefoneCelular)
                </th>
                <th>
                    @Html.DisplayName("ativo")
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                i++;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        <a href="@Url.Action("../Account/Detalhes", new { userId = item.userId })" title="Detalhes do jogador">
                            @Html.DisplayFor(modelItem => item.participante.nome)
                        </a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.classe)ª
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.participante.telefoneCelular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isAtivo)
                    </td>
                    <td>
                        <a href="@Url.Action("Ativar", new { inscricaoId = @item.Id })" title="Ativar/Desativar" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                    </td>
                </tr>
            }
        </table>
        <div class="pull-right" style="padding-top: 6px">
            <a href="@Url.Action("Index")" title="Voltar" class="btn btn-default">Voltar</a>
        </div>
    </div>
