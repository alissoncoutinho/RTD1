@{
    ViewBag.Title = "Index";
}
@model IEnumerable<Barragem.Models.Torneio>
    <legend>Torneio</legend>
    @if (ViewBag.isBarragemAtiva)
    {
        <p>
            <a href="@Url.Action("CreateTorneio")" class="btn btn-primary btn-small"><span class="glyphicon glyphicon-plus"></span> Novo</a>
        </p>
    }
    <div class="box-body table-responsive no-padding">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dataInicio)
                </th>
                <th>
                    ranking
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dataInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.barragem.nome)
                    </td>
                    <td>
                        <a href="@Url.Action("EditTorneio", new {id = @item.Id })" title="Editar/Detalhar" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        @if (Roles.IsUserInRole("admin") || Roles.IsUserInRole("adminTorneio") || Roles.IsUserInRole("adminTorneioTenis"))
                        {
                            @Html.ActionLink(" ", "ExcluirTorneio", new { id = item.Id }, new { @class = "btn btn-danger btn-xs glyphicon glyphicon-trash", onclick = "return confirm('Você confirma a exclusão do torneio " + item.nome + "?')" })
                        }
                        <!--a href="Url.Action("InscricoesTorneio", new {torneioId = item.Id })" title="Inscrições" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-list"></span>
                        </a>
                        <a href="Url.Action("TabelaJogos", new {torneioId = item.Id })" title="Tabela de Jogos" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-tasks"></span>
                        </a>
                        <a href="Url.Action("ListarJogos", new {torneioId = item.Id })" title="Lista de Jogos" class="btn btn-default btn-xs">
                            <span class="glyphicon glyphicon-play"></span>
                        </a-->
                    </td>
                </tr>
            }
        </table>
    </div>
