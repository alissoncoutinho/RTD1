@{
    ViewBag.Title = "Index";
}
@model IEnumerable<Barragem.Models.Torneio>
    <legend>Torneios</legend>
    <div class="box-body table-responsive no-padding">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dataInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.barragem)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dataInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.barragem.nome)
                    </td>
                    <td align="center">
                        <a href="@Url.Action("Detalhes", new { id = @item.Id })" class="btn btn-sm btn-default" data-id="@item.Id" title="Detalhar">Detalhar</a>
                        <a href="@Url.Action("InscricoesTorneio2", new {torneioId = @item.Id })" class="btn btn-sm btn-default" data-id="@item.Id" title="Inscritos">Inscritos</a>
                        <a href="@Url.Action("Tabela", new {torneioId = @item.Id })" class="btn btn-sm btn-default" data-id="@item.Id" title="Detalhar">Tabela</a>
                    </td>
                </tr>
            }
        </table>
    </div>

