<div class="form-row exibir-escolhaDeClassesExclusao" id="classesExclusao" style="margin-top:25px;display:none;">
    <div class="box box-warning">
        <div class="box-header with-border">
            <h3 class="box-title">Selecione as classes que você deseja <b style="color:red;"> EXCLUIR</b></h3>
        </div>
        <div class="box-body">
            @using (Html.BeginForm("ExcluirTabelaJogos", "Torneio", FormMethod.Post, new { @class = "form-row", @name = "FormClassesExclusao", @id = "FormClassesExclusao" }))
            {
                <div class="col-sm-4">
                    <input type="checkbox" value="1" name="chkExcluirTodasClasses" id="chkExcluirTodasClasses" onclick="marcarTodosJogosExclusao()" /> <b>Todos</b>
                </div>
                foreach (var item2 in ViewBag.Classes)
                {
                    var nome = item2.nome;

                    <div class="col-sm-4">
                        <input type="checkbox" value="@item2.Id" name="idsClassesExclusao" id="idsClassesExclusao" />
                        @Html.Raw(nome)
                    </div>
                }
                <input type="hidden" value="@ViewBag.TorneioId" name="torneioId" id="torneioId">
                <button id="btnExcluirJogos" type="button" onclick="ExcluirTabelaJogos()" class="btn btn-primary btn-small gerarTabela">Excluir Tabela</button>
            }
        </div>
    </div>
</div>

